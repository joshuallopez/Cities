<Window x:Class="JosueLAssignment3991605014.AddContinentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Continent" Height="200" Width="300">
    <Grid>
        <TextBox x:Name="textBoxContinentName" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buttonAddContinent" Content="Add Continent" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="120" Click="buttonAddContinent_Click"/>
        <Button x:Name="buttonClose" Content="Close" HorizontalAlignment="Left" Margin="135,38,0,0" VerticalAlignment="Top" Width="120" Click="buttonClose_Click"/>
        <Label x:Name="labelValidationMessage" Content="Validation Message" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
